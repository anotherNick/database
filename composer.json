{
    "name": "duelist101/database",

    "repositories": [
        {
            "url": "https://github.com/gabordemooij/stamp.git",
            "type": "git"
        }, {
            "url": "https://github.com/select2/select2.git",
            "type": "git"
        }, {
            "type": "package",
            "package": {
                "name": "fengyuanchen/cropper",
                "type": "component",
                "version": "0.7.7",
                "source": {
                    "url": "https://github.com/fengyuanchen/cropper.git",
                    "type": "git",
                    "reference": "v0.7.7"
                },
                "extra": {
                    "component": {
                        "scripts": [
                            "dist/cropper.min.js"
                        ],
                        "styles": [
                            "dist/cropper.min.css"
                        ]
                    }
                }
            }
        }
    ],
  
    "require": {
        "fengyuanchen/cropper": "0.7.7",
        "gabordemooij/stamp": "2.*",
		"propel/propel": "~2.0@dev",
        "select2/select2": "3.*",
        "slim/slim": "2.*"
    },

    "autoload": {
		"classmap": ["generated-classes/"],
        "psr-4": {
            "Duelist101\\": "lib/",
            "Duelist101\\Db\\View\\": "templates/",
            "Duelist101\\Db\\Route\\": "routes/",
            "Duelist101\\Db\\Model\\": "models/",
			"Propel\\Runtime\\Validator\\Constraints\\": "validation/"
        }
    },
	  
    "require-dev": {
        "phpunit/phpunit": "4.1.*",
        "codeception/codeception": "*",
        "jakoch/phantomjs-installer": "1.9.*",
		"monolog/monolog": "*"
    },

    "autoload-dev": {
        "psr-4": {
            "Duelist101\\Tests\\": "tests/"
        }
    },
    
    "scripts": {
        "post-install-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ],
        "post-update-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ]
    },
    
    "config": {
        "component-dir": "public_html/vendor"
    }
    
}
